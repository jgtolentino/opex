# Odoo CE+OCA 18.0 Environment Configuration
#
# Copy this file to .env and customize for your deployment:
#   cp .env.template .env
#
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# Database Configuration
# ============================================================================
DB_USER=odoo
DB_PASSWORD=changeme_secure_password_here

# ============================================================================
# Odoo Configuration
# ============================================================================

# Your domain (important for URL locking)
# This prevents Odoo from auto-detecting and using odoo.com URLs
ODOO_BASE_URL=https://erp.yourdomain.com

# Ports (change if needed to avoid conflicts)
ODOO_PORT=8069
ODOO_LONGPOLLING_PORT=8072

# Admin master password (used for database management)
# Set this to a strong password or disable DB manager completely
ADMIN_PASSWORD=changeme_master_password_here

# ============================================================================
# Deployment Configuration
# ============================================================================

# Set to 'production' or 'development'
ENVIRONMENT=production

# Workers (set based on CPU cores)
# Formula: (num_cores * 2) + 1
# For 4 cores: 9 workers
WORKERS=9

# Max cron threads (usually 2 is enough)
MAX_CRON_THREADS=2

# ============================================================================
# Email Configuration (optional)
# ============================================================================
EMAIL_FROM=noreply@yourdomain.com
SMTP_SERVER=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=smtp_user
SMTP_PASSWORD=smtp_password
SMTP_SSL=False

# ============================================================================
# Backup Configuration (optional)
# ============================================================================
BACKUP_DIR=/var/backups/odoo
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Firewall / Network Blocking
# ============================================================================

# Block these domains at firewall/DNS level to ensure complete isolation:
# - iap.odoo.com
# - apps.odoo.com
# - www.odoo.com
# - *.odoo.com (all subdomains)
#
# Example using ufw:
#   sudo ufw deny out to iap.odoo.com
#
# Example using /etc/hosts:
#   127.0.0.1 iap.odoo.com
#   127.0.0.1 apps.odoo.com
#   127.0.0.1 www.odoo.com

# ============================================================================
# OCA Configuration
# ============================================================================

# OCA repositories to clone (comma-separated)
# These will be cloned into ./oca-addons/
OCA_REPOS=server-tools,server-ux,web,reporting-engine,server-brand

# OCA branch (should match Odoo version)
OCA_BRANCH=18.0
