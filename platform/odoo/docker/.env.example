# InsightPulse Odoo - Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env file with real credentials

# ============================================================
# Project Configuration
# ============================================================
COMPOSE_PROJECT_NAME=odoo

# ============================================================
# Docker Image Configuration
# ============================================================
# Set to specific tag for production (e.g., prod-abc1234)
ODOO_IMAGE=registry.digitalocean.com/ipai/odoo-ce:latest

# ============================================================
# Database Configuration
# ============================================================
DB_HOST=db
DB_PORT=5432
DB_NAME=odoo
DB_USER=odoo
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# PostgreSQL admin password (for database management)
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# ============================================================
# Odoo Configuration
# ============================================================
# Admin master password (used for database management operations)
ADMIN_PASSWD=CHANGE_ME_ADMIN_PASSWORD_HERE

# ============================================================
# Email Configuration (Optional)
# ============================================================
# SMTP server configuration for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_SSL=True

# ============================================================
# Integration Configuration (Optional)
# ============================================================
# Spectra integration credentials (for tbwa_spectra_integration module)
SPECTRA_API_URL=https://api.spectra.example.com
SPECTRA_API_KEY=your-api-key-here

# ============================================================
# OCR Configuration (Optional)
# ============================================================
# Google Cloud Vision API (for ipai_ocr_expense module)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account",...}

# ============================================================
# Environment Flags
# ============================================================
# Set to 'production' or 'staging'
ENV=production

# Enable development mode (True/False)
ODOO_DEV_MODE=False
