# PostgreSQL
POSTGRES_PASSWORD=mmuserpass_change_me

# Mattermost
MM_SITE_URL=http://localhost:8065

# Mattermost Bot (create in System Console → Integrations → Bot Accounts)
MM_BOT_TOKEN=your_bot_token_here

# Slash Command Token (create in System Console → Integrations → Slash Commands)
MM_SLASH_TOKEN=your_slash_command_token_here

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_key_here

# RAG Backend (optional - for hybrid search)
RAG_BACKEND_URL=http://localhost:8000

# Supabase (optional - for document storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
